<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wolfsoft.fliply.Search_Results_fliply">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/toolbar_search_results"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/rect_bg">

            <customfonts.TextViewSFProDisplayRegular
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Drones"
                android:textSize="12sp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="2dp"
                android:textColor="#3b3b3b"/>

            <ImageView
                android:id="@+id/arrow"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/oval"
                android:src="@drawable/ic_clear_black_24dp"
                android:tint="#a9a0b0" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="24dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal">

            <customfonts.MyTextView_SF_Pro_Display_Semibold
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="23 Search Results.."
                android:layout_gravity="center"
                android:textColor="#3b3b3b"
                android:textSize="16sp"/>

            <ImageView
                android:layout_marginRight="15dp"
                android:layout_marginTop="4dp"
                android:scaleType="centerCrop"
                android:layout_width="27dp"
                android:layout_height="20dp"
                android:src="@drawable/sort" />
        </LinearLayout>


        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:layout_marginLeft="27dp"
            android:paddingBottom="70dp"
            android:clipToPadding="false"
            android:id="@+id/recycler2">
        </android.support.v7.widget.RecyclerView>

    </LinearLayout>

    <com.roughike.bottombar.BottomBar
        android:id="@+id/bottomBar"
        app:bb_behavior="iconsOnly"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        app:bb_tabXmlResource="@xml/bottombar" />
</RelativeLayout>
