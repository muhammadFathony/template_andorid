<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.wolfsoft.fliply">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Splashscreen_fliply" />
        <activity android:name=".Login" />
        <activity android:name=".Home"
            android:windowSoftInputMode="stateHidden|adjustResize"/>

        <activity android:name=".Profile" />
        <activity android:name=".ProductPage" />
        <activity android:name=".Messages_fliply" />
        <activity android:name=".Search_Results_fliply" />
        <activity android:name=".Chat_fliply"/>
        <activity android:name=".Activity_list"/>
        <activity android:name=".Splash_screen">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

    </application>

</manifest>

